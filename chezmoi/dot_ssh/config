# General

Host *.amazonaws.com
  ControlMaster no
  ControlPath none
  LogLevel FATAL
  RequestTTY yes

Host *.github.com
  AddKeysToAgent yes

Host *
  ForwardAgent no
  AddKeysToAgent no
  Compression no
  ServerAliveInterval 60
  ServerAliveCountMax 120
  HashKnownHosts no
  UserKnownHostsFile ~/.ssh/known_hosts
  ControlMaster no
  ControlPath /Users/rayandrew/.ssh/.control_channels/%h:%p:%r
  ControlPersist no
